# Supabase Configuration
# Required: Get these values from your Supabase project settings
EXPO_PUBLIC_SUPABASE_URL=your_supabase_project_url
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Application Environment
# Required: Set the application environment (development/production)
EXPO_PUBLIC_APP_ENV=development

# Application URLs
# Required: Set the application URL and auth redirect URL
EXPO_PUBLIC_APP_URL=exp://localhost:19000
EXPO_PUBLIC_AUTH_REDIRECT_URL=exp://localhost:19000/auth/callback

# Social Authentication
# Required if using social auth: Get these values from respective platforms
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id
EXPO_PUBLIC_FACEBOOK_CLIENT_ID=your_facebook_client_id

# Platform-Specific Google OAuth
# Required for native platform authentication
EXPO_PUBLIC_GOOGLE_IOS_CLIENT_ID=your_google_ios_client_id
EXPO_PUBLIC_GOOGLE_ANDROID_CLIENT_ID=your_google_android_client_id

# Security Configuration
# Required: Set security-related variables
EXPO_PUBLIC_ENCRYPTION_KEY=your_encryption_key_here

# Optional: Override default security settings
EXPO_PUBLIC_PASSWORD_MIN_LENGTH=12
EXPO_PUBLIC_SESSION_TIMEOUT=3600
EXPO_PUBLIC_MAX_LOGIN_ATTEMPTS=5
EXPO_PUBLIC_REQUIRE_MFA=false

# Rate Limiting
# Optional: Override default rate limiting settings
EXPO_PUBLIC_RATE_LIMIT_WINDOW_MS=900000
EXPO_PUBLIC_RATE_LIMIT_MAX_REQUESTS=100

# Data Retention (in days)
# Optional: Override default data retention settings
EXPO_PUBLIC_DATA_RETENTION_DAYS=730
EXPO_PUBLIC_ACTIVITY_LOGS_RETENTION=90
EXPO_PUBLIC_ANALYTICS_RETENTION=365

# Note: 
# 1. All EXPO_PUBLIC_ variables are exposed to your JavaScript code
# 2. Keep your production values secure and never commit them to version control
# 3. For development, you can use placeholder values
# 4. Some variables have defaults in the config if not set
# 5. Make sure to set up proper security measures in production
